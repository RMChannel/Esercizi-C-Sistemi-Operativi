#include <ourhdr.h>

int cnt=0;

void figlio() {
	char stampa[50]="";
	while(cnt<10) {
		pause();
		sprintf(stampa,"PID: %d cnt: %d\n",getpid(),cnt);
		write(1,stampa,strlen(stampa));
	}
}

void segnale() {
	cnt++;
}

int main(void) {
	signal(SIGUSR1,segnale);
}
