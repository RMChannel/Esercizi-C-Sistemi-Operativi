#include <ourhdr.h>
#include <dirent.h>

int main(int argc, char *argv[]) {
	if(argc!=2) err_sys("Uso corretto: ./es1 <path>");
	DIR *dir;
	struct dirent *dt;
	dir=opendir(argv[1]);
	if(dir==NULL)err_sys("Errore lettura path");
	while((dt=readdir(dir))!=NULL) {
		printf("%s %c\n",dt->d_name,dt->d_type);
	}
}
